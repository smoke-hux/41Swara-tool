.SH EXAMPLES
.SS "Basic Scanning"
.nf
# Scan current directory
.B 41

# Scan specific directory
.B 41 contracts/

# Scan single file
.B 41 MyContract.sol

# Verbose output with stats
.B 41 contracts/ -v --stats
.fi
.SS "Severity & Confidence Filtering"
.nf
# Only critical and high findings
.B 41 contracts/ --min-severity high

# High confidence findings only (70%+)
.B 41 contracts/ --confidence-threshold 70

# Combined filtering
.B 41 contracts/ --min-severity high --confidence-threshold 80
.fi
.SS "SWC/CWE ID Filtering"
.nf
# Only check reentrancy (SWC-107)
.B 41 contracts/ --include-swc SWC-107

# Check multiple specific SWCs
.B 41 contracts/ --include-swc SWC-107,SWC-105,SWC-114

# Exclude floating pragma warnings
.B 41 contracts/ --exclude-swc SWC-103
.fi
.SS "File Exclusion"
.nf
# Exclude test files
.B 41 contracts/ --exclude-pattern "**/test/**"

# Exclude mock contracts
.B 41 contracts/ --exclude-pattern "**/*Mock*"

# Skip large files (>5MB)
.B 41 contracts/ --max-file-size 5
.fi
.SS "DeFi Analysis"
.nf
# Enable DeFi analyzers
.B 41 . --defi-analysis

# Enable advanced detectors (L2, ERC4626, etc.)
.B 41 . --advanced-detectors

# Full analysis
.B 41 . --defi-analysis --advanced-detectors -v
.fi
.SS "CI/CD Integration"
.nf
# JSON output for parsing
.B 41 contracts/ --format json -o results.json

# SARIF for GitHub Code Scanning
.B 41 contracts/ --format sarif -o results.sarif

# Fail pipeline on high severity
.B 41 contracts/ --fail-on high -q

# No colors for CI logs
.B 41 contracts/ --no-color
.fi
.SS "Baseline Comparison"
.nf
# Export current results as baseline
.B 41 contracts/ --export-baseline baseline.json

# Compare against baseline (only new findings)
.B 41 contracts/ --baseline baseline.json
.fi
.SS "Git Integration"
.nf
# Scan only modified files
.B 41 --git-diff

# Compare against main branch
.B 41 --git-diff --git-branch main
.fi
.SS "Professional Audit"
.nf
# Generate audit report
.B 41 contracts/ --audit --project "MyDApp" --sponsor "Client Inc"

# Cross-file analysis
.B 41 contracts/ --project-analysis
.fi
.SS "Tool Integration"
.nf
# Correlate with Slither
.B slither . --json slither.json
.B 41 . --slither-json slither.json

# Generate Foundry PoC tests
.B 41 . --generate-poc
.fi
